<Window x:Class="CharacterEvolution.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HelpWindow" Height="300" Width="300" WindowStyle="None" AllowsTransparency="True">
    <Border Name="ChangeSkinBorder" Width="300" Height="300"  Background="Cornsilk" BorderBrush="Black" BorderThickness="1"  AllowDrop="True" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="280"/>
               </Grid.RowDefinitions>
            <Canvas Grid.Row="0">
                <TextBlock Text="帮助文档" FontSize="18" Foreground="Red"></TextBlock>
                <Border Width="20" Height="20"  Margin="279,0" Background="Red" MouseDown="CloseHelpWindoW_MouseDown">
                    <Image Source="ima/miniClose.png" ></Image>
                </Border>
            </Canvas>
            <Grid Grid.Row="1">
                <ScrollViewer>
                    <TextBlock TextWrapping="Wrap" Margin="30" FontSize="17" Text="      文字进化论是一款针对那些10-19的青少年而准备的软件，中华文化博大精深，为了让我们的孩子能够更好的继承和发扬中国传统文化，首先要从学习认识古文字开始。我们使用微软WPF将音乐、文字、游戏进行整合，旨在让青少年能够在轻松愉悦的心情下学习中华古文字。"></TextBlock>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
